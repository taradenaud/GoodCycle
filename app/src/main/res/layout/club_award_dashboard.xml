<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ClubAwardDashboard">

    <LinearLayout
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center|center_vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5">

        <EditText
            android:id="@+id/SelectedEvent"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/text_border_1"
            android:ems="10"
            android:hint="@string/selected_evnt"
            android:inputType="text" />

        <ListView
            android:id="@+id/awardsList"
            android:layout_width="match_parent"
            android:layout_height="367dp" />


        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/editTextText"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:ems="10"
            android:inputType="text"
            android:text="Name" />

        <EditText
            android:id="@+id/resultsEditText"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:height="50dp"
            android:gravity="top"
            android:hint="@string/evnt_result"
            android:inputType="textMultiLine" />

        <EditText
            android:id="@+id/awardNameEditText"
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:height="50dp"
            android:hint="@string/award_name"
            android:inputType="text" />

        <EditText
            android:id="@+id/awardDetailEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:height="50dp"
            android:gravity="top"
            android:hint="@string/award_details"
            android:inputType="textMultiLine" />

        <Button
            android:id="@+id/saveResultsAndAwardsButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/save_r_a" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:orientation="horizontal">

            <Button
                android:id="@+id/backButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/back" />
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>

