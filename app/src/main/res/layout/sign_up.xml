<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUp"
    android:background="@drawable/sign_up_page_1">

    <LinearLayout
        android:id="@+id/login"
        android:layout_width="match_parent"
        android:padding="20dp"
        android:layout_height="wrap_content"
        android:gravity="center|center_vertical"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.52">

        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/varela_round_regular"
            android:textColor="@color/cool_gray_d3"
            android:text="@string/sign_up"
            android:textSize="48sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="30dp" />

        <EditText
            android:id="@+id/LoginUsername"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/border_cool_gray_d3"
            android:ems="10"
            android:fontFamily="@font/varela_round_regular"
            android:hint="@string/something"
            android:inputType="textEmailAddress"
            android:padding="10dp" />

        <TextView
            android:id="@+id/emailValidation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/holo_red_dark" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="16dp" />

        <EditText
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/border_cool_gray_d3"
            android:ems="10"
            android:fontFamily="@font/varela_round_regular"
            android:hint="@string/Usernametext"
            android:inputType="text"
            android:padding="10dp" />

        <TextView
            android:id="@+id/UsernameValidation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/holo_red_dark" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="16dp" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/etPasswordLayout"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/border_cool_gray_d3"
            app:hintEnabled="false"
            app:passwordToggleEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/LoginPassword"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/border_cool_gray_d3"
                android:hint="Password:"
                android:fontFamily="@font/varela_round_regular"
                android:ems="10"
                android:inputType="textPassword" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/passwordValidation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/holo_red_dark" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="16dp" />

        <Spinner
            android:id="@+id/user_selection_spinner"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/text_border_1"
            android:entries="@array/User_selection"
            android:hint="@string/UserTypeSpin"
            android:padding="10dp"
            android:spinnerMode="dropdown" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <EditText
            android:id="@+id/clubName"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/border_cool_gray_d3"
            android:ems="10"
            android:fontFamily="@font/varela_round_regular"
            android:hint="Club Name"
            android:inputType="text"
            android:padding="10dp"
            android:visibility="invisible" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <Button
            android:id="@+id/btn_reg"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="@string/RegisterText"
            android:backgroundTint="@color/cool_gray_d1"/>
        <Button
            android:id="@+id/backButton"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="Back"
            android:backgroundTint="@color/cool_gray"/>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>