<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/EventEditBTN"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".clubOwner_dashboard">


    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/welcome_to" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Club Owner Dashboard"
            android:textSize="34sp" />

        <Button
            android:id="@+id/buttonEventCreation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Event Creation" />

        <Button
            android:id="@+id/EventEditButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Manage Events" />

        <Button
            android:id="@+id/buttonRoutePlanning"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Route Planning" />

        <Button
            android:id="@+id/buttonRegistrationManagement"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Registration Management" />

        <Button
            android:id="@+id/buttonResultsAndAwards"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Results and Awards" />

        <Button
            android:id="@+id/backButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text="@string/back" />

    </LinearLayout>

    <Button
        android:id="@+id/buttonProfilemngmnt"
        android:layout_width="113dp"
        android:layout_height="68dp"
        android:layout_marginStart="280dp"
        android:layout_marginBottom="128dp"
        android:text="Edit Profile"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
