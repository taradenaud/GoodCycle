<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/participant_dashboard"
    tools:context=".ParticipantDashboard">

    <LinearLayout
        android:layout_width="match_parent"
        android:padding="20dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center|center_vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5"
        tools:ignore="ExtraText">

         />

        <TextView
            android:id="@+id/Participant_Welcome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/varela_round_regular"
            android:text="Welcome"
            android:textColor="@color/light_green_d1"
            android:textSize="35sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="140dp" />

        <Button
            android:id="@+id/EventDiscBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/light_green_d1"
            android:text="Discover Events" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <Button
            android:id="@+id/RegistrationStatusBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/light_green_d1"
            android:text="Registration Status" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="15dp" />

        <Button
            android:id="@+id/clubRatingDashboardBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/light_green_d1"
            android:text="Rate Club" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="100dp" />

        <Button
            android:id="@+id/BackBtn"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/light_green_d1"
            android:text="Log Out" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>